Coercion: Taming your data 100 XP
# Create variables var1, var2 and var3
var1 <- TRUE
var1_char <- as.character(var1)
is.character(var1_char)

var2 <- 0.3
var2_log<-as.logical(var2)
class(var2_log)

var3 <- "i"
var3_num<-as.numeric(var3)
